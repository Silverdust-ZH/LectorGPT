{
    // ðŸŒ¿ Global Editor Settings
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.rulers": [80],

    // ðŸŒ¿ Global Prettier Settings
    "prettier.tabWidth": 4,
    "prettier.useTabs": false,

    // ðŸŒ± JSONC (Language) Settings
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // ðŸŒ± LaTeX (Language) Settings
    "[latex]": {
        "editor.rulers": [80],
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "typescript.tsdk": "node_modules/typescript/lib",

    // ðŸŒ¿ Explorer Sort Settings
    "explorerSort.rules": [
        {
            "name": "Index files first",
            "pathPattern": "**",
            "priorities": [
                { "condition": "name === 'index.ts'", "priority": 100000 },
                {
                    "condition": "name.endsWith('.type.ts')",
                    "priority": 99999
                },
                {
                    "condition": "name.endsWith('.interface.ts')",
                    "priority": 99999
                }
            ]
        }
    ]
}
